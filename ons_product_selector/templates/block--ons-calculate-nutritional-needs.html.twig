				<label for="illness_severity_0">{{ 'No Illness or no Injured'|t }}</label>
			</div>
			<div class="item">
				<input type="radio" id="illness_severity_1" name="stress" value="1.25" required>
				<label for="illness_severity_1">{{ 'Illness or Injured & >65years'|t }}</label>

			</div>
