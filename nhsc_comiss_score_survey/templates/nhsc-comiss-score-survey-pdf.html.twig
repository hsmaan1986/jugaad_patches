<style>
@font-face {
font-family: new_font;
src: url('../fonts/dejavu-sans.book.ttf');
}
</style>
{{ attach_library('nhsc_comiss_score_survey/comiss-score-pdf') }}
<div style="background-color: #ebeced" id="PDFContainer">
    <div class="wrapper">
        <h1 style=" font-family: Arial, Helvetica, sans-serif; color:#000000;">{{ survey_title }}</h1>

        <table class="table table-borderless" cellspacing="0" cellpadding="0" border="0" width="100%">
            <tbody>
                <tr>
                    <td width="30%" style="font-family: Arial, Helvetica, sans-serif; background-color:#ffffff; color:#5d5d5d; border-radius:8px 8px 8px 8px; padding:10px;font-size: 12px">
                        {{ 'Last name:'|t }}<br><br>
                        <span style="border-bottom: 1px dotted #5d5d5d; height: 4px; width: 100%; display: block"></span>
                    </td>
                    <td width="2px"></td>
                    <td width="30%" style=" font-family: Arial, Helvetica, sans-serif; background-color:#ffffff; color:#5d5d5d; border-radius:8px; padding:10px;font-size: 12px">
                        {{ 'First name:'|t }}<br><br>
                        <span style="border-bottom: 1px dotted #5d5d5d; height: 4px; width: 100%; display: block"></span>
                    </td>
                    <td width="2px"></td>
                    <td width="20%" style=" font-family: Arial, Helvetica, sans-serif; background-color:#ffffff; color:#5d5d5d; border-radius:8px; padding:10px;font-size: 12px">
                        {{ 'Age:'|t }}<br><br>
                        <span style="border-bottom: 1px dotted #5d5d5d; height: 4px; width: 100%; display: block"></span>
                    </td>
                    <td width="2px"></td>
                    <td width="20%" style=" font-family: Arial, Helvetica, sans-serif; background-color:#ffffff; color:#5d5d5d; border-radius:8px; padding:10px;font-size: 12px">
                        {{ 'Date:'|t }}<br><br>
                        <span style="border-bottom: 1px dotted #5d5d5d; height: 4px; width: 100%; display: block"></span>
                    </td>
                </tr>
            </tbody>
        </table>

        <h3 style=" font-family: Arial, Helvetica, sans-serif; color:#6d6e71; text-transform:uppercase; border-bottom:1px solid #939598; font-size:14px">{{ purpose_title }}</h3>
        <div style="font-family: Arial, Helvetica, sans-serif; color:#000000; font-size:12px">
            {{ purpose_copy |raw }}
        </div>

        <h3 style=" font-family: Arial, Helvetica, sans-serif; color:#6d6e71; text-transform:uppercase; border-bottom:1px solid #939598; font-size:14px">{{ instructions_title }}</h3>
        <div style="font-family: Arial, Helvetica, sans-serif; color:#000000; font-size:12px">
            {{ instructions_copy |raw }}
        </div>
        <br/>
        <table class="table table-borderless" cellspacing="0" cellpadding="0" border="0" width="100%">
            <thead>
                <tr>
                    <th width="200px" style=" font-family: Arial, Helvetica, sans-serif; background-color:#939598; color:#ffffff; border-top-left-radius: 8px; padding:10px;font-size: 14px; text-transform: uppercase">{{ 'Symptom'|t }}</th>
                    <th style=" font-family: Arial, Helvetica, sans-serif; background-color:#939598; color:#ffffff; padding:10px;font-size: 14px; text-transform: uppercase">{{ 'Score'|t }}</th>
                    <th width="80px" style=" font-family: Arial, Helvetica, sans-serif; background-color:#939598; color:#ffffff; border-top-right-radius:8px; padding:10px;font-size: 14px; text-transform: uppercase; text-align: center"></th>
                </tr>
            </thead>
            {% for question in questions %}
            <tbody style="page-break-inside: avoid;">

                <tr>
                    <td valign="top" style="background-color: #ffffff; border-right: 1px solid #000000;  font-family: Arial, Helvetica, sans-serif; color:#000000; font-size: 14px; font-weight: bold; padding-left:10px">{{ question.question }}</td>
                    <td valign="top" align="center" style="background-color: #ffffff; text-align:center; padding: 0;">
                        <table class="table table-borderless" cellspacing="0" cellpadding="0" border="0" align="left" width="100%; height: 100%;">
                            {% for key,option in question.options %}
                                <tr>
                                    <td width="60px" valign="top" align="center" style=" font-family: Arial, Helvetica, sans-serif; color:#000000; font-size: 12px; line-height: 16px; font-weight: bold; text-align: center; padding: 3px;">
                                        {{ key|raw }}
                                    </td>
                                    <td valign="top" style=" font-family: Arial, Helvetica, sans-serif; color:#000000; font-size: 12px; line-height: 16px; vertical-align: top; padding-left:10px; text-align: left; padding: 3px 5px; border-left: 1px solid #000000;">
                                        {{ option|escape }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>

                    </td>
                    <td style="background-color: #ffffff; border-left: 1px solid #000000; text-align: center" valign="bottom">
                        {{ 'Score'|t }}
                        <div style="border:1px solid black; height:40px; width: 60px; border-radius: 8px; display: inline-block;">&nbsp;</div>
                    </td>
                </tr>
                {% if loop.last == false  %}
                    <tr>
                        <td height="4" colspan="3"></td>
                    </tr>
                {% endif%}
            </tbody>
            {% endfor %}
        </table>

        <table width="100%" cellpadding="" cellspacing="0" border="0">
            <tr>
                <td align="right" valign="middle"  style="font-family: Arial, Helvetica, sans-serif; color:#000000; font-size: 12px;">
                    <table cellpadding="0" cellspacing="0" border="0" style="background-color:#939598; border-radius: 0 0 8px 8px; color: #fff; font-weight:bold; width:190px; padding: 10px; display: inline-block;">
                        <tr>
                            <td style="width: 190px; text-align: right; padding-right: 10px; color: #fff;"><span style="color: #fff;">{{ 'TOTAL SCORE'|t }}</span></td>
                            <td style="width: 100px; text-align: right;"><span style="background: #fff; border-radius: 8px; width:60px; height:40px; display: inline-block;"></span></td>
                        </tr>
                    </table>
                </td>
            </tr>

        </table>

        <h3 style=" font-family: Arial, Helvetica, sans-serif; color:#6d6e71; text-transform:uppercase; border-bottom:1px solid #939598; font-size:14px">{{ reading_results_title }}</h3>
        <div style="font-family: Arial, Helvetica, sans-serif; color:#000000; font-size:12px">
            {{ reading_results_copy |raw }}
        </div>

        <div style="font-family: Arial, Helvetica, sans-serif; color:#000000; font-size:10px; margin: 15px 0;">
            {{ form_print_footer | raw }}
        </div>

        <table width="100%" cellpadding="" cellspacing="0" border="0">
            <tr>
                <td width="50%" align="left" valign="middle"  style="font-family: Arial, Helvetica, sans-serif; color:#000000; font-size: 12px;">
                    <img src="{{ footer_logo }}" />
                </td>
                <td width="50%" align="right" style="font-family: Arial, Helvetica, sans-serif; color:#000000; font-size:12px; text-align:right">
                    {{ copy_right_text| raw }}
                </td>

            </tr>

        </table>

    </div>
</div>