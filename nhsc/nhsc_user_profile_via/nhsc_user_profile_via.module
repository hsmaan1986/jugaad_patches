    $route_match    = \Drupal::service('current_route_match');
    $uid            = $route_match->getParameter('uid');

    $identifier     = $uid .'-'. \Drupal::request()->getClientIp();
    \Drupal::flood()->clear('user.failed_login_user', $identifier);

