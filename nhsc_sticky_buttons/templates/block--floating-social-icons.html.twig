            </div>
        {% endif %}

        {% if social_values.youtube is not empty %}
            <div class="{{ sub_class }} {{ responsive_class }}">
                <a
                    title="{{ social_titles.youtube_title }}"
                    class="{{ social_values.hover }} youtube"
                    href="{{ social_values.youtube }}"
                    target="{{ social_values.target }}"
                    style="background: {{ social_values.youtube_bg_color }}"
                >
                    <span class="fa {{ social_values.youtube_fa_icon }}"> </span>
                    <span class="title"> {{ social_titles.youtube_title }}</span>
                </a>
            </div>
        {% endif %}

        {% if social_values.customlink is not empty %}
            <div class="{{ sub_class }} {{ responsive_class }}">
                <a
                    title="{{ social_titles.customlink_title }}"
                    class="{{ social_values.hover }} customlink"
                    href="{{ social_values.customlink }}"
                    target="{{ social_values.target }}"
                    style="background: {{ social_values.customlink_bg_color }}"
                >
                    <span class="fa {{ social_values.customlink_fa_icon }}"></span>
                    <span class="title"> {{ social_titles.customlink_title }} </span>
                </a>
            </div>
        {% endif %}
        {% if social_values.fusepumpbutton is not empty %}
            <div class="{{ sub_class }} {{ responsive_class }}">
                <a
                    title="{{ social_titles.fusepumpbutton_title }}"
                    class="{{ social_values.hover }} fusepumpbutton"
                    href="#"
                    id="fusepump-{{ social_values.fusepumpbutton }}"
                    style="background: {{ social_values.fusepumpbutton_bg_color }}"
                >
                    <span class="fa {{ social_values.fusepumpbutton_fa_icon }}"></span>
                    <span class="title"> {{ social_titles.fusepumpbutton_title }} </span>
                </a>
            </div>
        {% endif %}

        {% if social_values.kwitbutton is not empty %}
            <script type="text/javascript">
                var kwit_brand_widget_uid= "{{ social_values.kwit_brand_id }}";
            </script>
            <div class="{{ sub_class }} {{ responsive_class }}">
                <a
                    title="{{ social_titles.kwitbutton_title }}"
                    class="{{ social_values.hover }} kwitbutton"
                    href="#" id="kwit-{{ social_values.kwitbutton }}"
                    style="background: {{ social_values.kwitbutton_bg_color }}"
                >
                    <span class="fa {{ social_values.kwitbutton_fa_icon }}"></span>
                    <span class="title"> {{ social_titles.kwitbutton_title }} </span>
                </a>
            </div>
        {% endif %}
    </div>
</div>
